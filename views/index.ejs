<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Grades</title>
</head>
<body>
    <h1>Student Grades</h1>
    <form method="GET">
        <input type="text" name="search" placeholder="Search by student name" value="<%= search %>">
        <select name="filter">
            <option value="">All</option>
            <option value="PASS" <%= filter === 'PASS' ? 'selected' : '' %>>PASS</option>
            <option value="FAIL" <%= filter === 'FAIL' ? 'selected' : '' %>>FAIL</option>
        </select>
        <input type="submit" value="Search/Filter">
    </form>
    <a href="/add">Add Student</a>
    <a href="/report">Download Report</a>
    <table border="1">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Subject Name</th>
                <th>Grade</th>
                <th>Remarks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.student_name %></td>
                    <td><%= student.subject_name %></td>
                    <td><%= student.grade %></td>
                    <td><%= student.remarks %></td>
                    <td>
                        <a href="/edit/<%= student.student_key %>">Edit</a>
                        <a href="/delete/<%= student.student_key %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
